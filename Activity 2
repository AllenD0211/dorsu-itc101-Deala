import java.util.Scanner;
public class Assignment2 {
    public static void main(String[] args) {
       int num1,num2,sum,difference,product,quotient;
       Scanner sc = new Scanner(System.in);
       System.out.println("Enter the First integers: ");
       num1 = sc.nextInt();
       
       System.out.println("Enter the Second integers: ");
       num2 = sc.nextInt();
       
       //sum
       
       sum = num1+num2;
       System.out.println("The sum of two numbers is: "+sum);
       
       //difference
        difference = num1-num2;
       System.out.println("The difference of two numbers is: "+difference);
       
       //product
       product = num1*num2;
       System.out.println("The product of two numbers is: "+product);
       
       //quotient
       if(num2 == 0){
           System.out.println("Division by 0 is not possible");
       }
       else{
        quotient = num1/num2;
       System.out.println("The quotient of two numbers is: "+quotient);
       }
    }
    
}
